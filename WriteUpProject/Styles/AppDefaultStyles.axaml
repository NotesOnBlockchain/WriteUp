<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20">
      <!-- Add Controls for Previewer Here -->
		<TextBlock Text="TestTestTest"></TextBlock>
    </Border>
  </Design.PreviewWith>
  <!-- Add Styles Here -->
	<Style Selector="TextBlock">
		<Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"></Setter>
		<Setter Property="Margin" Value="3 0 0 0"></Setter>
	</Style>

	<Style Selector="TextBox">
		<Setter Property="Background" Value="{DynamicResource PrimaryTextBoxBackground}"></Setter>
	</Style>

	<Style Selector="Button">
		<Setter Property="Background" Value="{DynamicResource PrimaryButtonBackground}"></Setter>
	</Style>
</Styles>
