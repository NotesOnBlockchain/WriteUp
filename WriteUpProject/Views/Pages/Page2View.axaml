<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WriteUpProject.ViewModels.Pages"
             x:Class="WriteUpProject.Views.Pages.Page2View"
             x:DataType="vm:Page2ViewModel">
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Page 2" FontSize="24" FontWeight="Bold"/>
        <TextBlock Text="{Binding ReceivedData, StringFormat='Received: {0}'}"/>
        <TextBox Text="{Binding Page2Data}" Watermark="Enter more data..."/>
        <Button Content="Go to Page 3" Command="{Binding NavigateToPage3Command}"/>
        <Button Content="Back" Command="{Binding NavigateBackCommand}"/>
    </StackPanel>
</UserControl>