<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="WriteUpProject.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
		<StyleInclude Source="Styles/AppDefaultStyles.axaml"></StyleInclude>
    </Application.Styles>

	<Application.Resources>
		<SolidColorBrush x:Key="PrimaryBackgroundColor">#100C08</SolidColorBrush>
		<SolidColorBrush x:Key="PrimaryTextColor">#F0FFF0</SolidColorBrush>
		<SolidColorBrush x:Key="PrimaryTextBoxBackground">#696969</SolidColorBrush>
		<SolidColorBrush x:Key="PrimaryButtonBackground">#009e60</SolidColorBrush>
	</Application.Resources>
</Application>
