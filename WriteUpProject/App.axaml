<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="WriteUpProject.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
		<StyleInclude Source="Styles/AppDefaultStyles.axaml"></StyleInclude>
    </Application.Styles>

	<Application.Resources>
		<SolidColorBrush x:Key="PrimaryBackgroundColor">#280A3E</SolidColorBrush>
		<SolidColorBrush x:Key="PrimaryTextColor">#F2EDD1</SolidColorBrush>
		<SolidColorBrush x:Key="PrimaryTextBoxBackground">#7A85C1</SolidColorBrush>
		<SolidColorBrush x:Key="PrimaryButtonBackground">#E7D3D3</SolidColorBrush>
	</Application.Resources>
</Application>
