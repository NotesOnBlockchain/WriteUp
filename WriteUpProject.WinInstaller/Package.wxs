	  <Property Id="WIXUI_INSTALLDIR" Value="TARGETDIR" />

	  <ui:WixUI Id="WixUI_InstallDir" />


	  <Feature Id="Main">
      <ComponentGroupRef Id="AppComponents" />
    </Feature>
  </Package>
</Wix>
